{
    "compilerOptions": {
      "rootDir": "./src",
      "esModuleInterop": true,
      "lib": ["es6"],
      "moduleResolution": "node",
      "outDir": "./build",
      "moduleDetection": "auto",
      "target": "ES2020" ,
      "module": "ES2020",
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "allowImportingTsExtensions": true
}